<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#fff"
    android:orientation="horizontal"
    android:stretchColumns="*">

    <TableRow>

        <RelativeLayout
            android:layout_height="?attr/actionBarSize"
            android:layout_span="2"
            android:background="@color/colorPrimary">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="添加菜品"
                android:textColor="#fff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/self_defined_menu_list_item_add_close"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/delete" />
        </RelativeLayout>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="类　别"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/self_defined_menu_list_item_add_type"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:gravity="center|left" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="名　称"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/self_defined_menu_list_item_add_name"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center"
            android:hint="点击编辑"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="价　格"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/self_defined_menu_list_item_add_price"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="0"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/self_defined_menu_list_item_add_submit"
            android:layout_span="2"
            android:background="@color/colorPrimary"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="20sp" />
    </TableRow>
</TableLayout>