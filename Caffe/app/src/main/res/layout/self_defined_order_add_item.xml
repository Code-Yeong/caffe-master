<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,0">

        <TableRow>

            <RelativeLayout
                android:layout_height="?attr/actionBarSize"
                android:layout_span="2"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="添加订单"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/self_defined_order_add_item_cancel"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@drawable/delete" />
            </RelativeLayout>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="50dp"
                android:gravity="center"
                android:text="名　称"
                android:textColor="#a9000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout android:layout_height="50dp">

                <EditText
                    android:id="@+id/self_defined_order_add_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center"
                    android:hint="请选择"
                    android:selectAllOnFocus="true"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/self_defined_order_add_item_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@drawable/search_balck" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="#ccc" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="价　格"
                android:textColor="#a9000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/self_defined_order_add_item_price"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="center"
                android:hint="点击输入"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="#ccc" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="数　量"
                android:textColor="#a9000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/self_defined_order_add_item_count_del"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/minus" />

                <TextView
                    android:id="@+id/self_defined_order_add_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/self_defined_order_add_item_count_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/add" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="#ccc" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="50dp"
                android:gravity="center"
                android:text="SIZE"
                android:textColor="#a9000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/self_defined_order_add_item_size_l"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:text="大" />

                <CheckBox
                    android:id="@+id/self_defined_order_add_item_size_m"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:checked="true"
                    android:text="中" />
            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="#ccc" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="50dp"
                android:gravity="center"
                android:text="温　度"
                android:textColor="#a9000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/self_defined_order_add_item_temp_c"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="冰" />

                <CheckBox
                    android:id="@+id/self_defined_order_add_item_temp_h"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="热" />

                <CheckBox
                    android:id="@+id/self_defined_order_add_item_temp_n"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="常" />
            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="#ccc" />
        </TableRow>

        <TableRow>

            <android.support.design.widget.TextInputLayout
                android:layout_height="150dp"
                android:layout_span="2"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/self_defined_order_add_item_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="添加备注"
                    android:padding="15dp"
                    android:selectAllOnFocus="true"
                    android:textColor="#7b000000" />
            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/self_defined_order_add_item_submit"
                android:layout_span="2"
                android:background="@color/colorPrimary"
                android:text="提　交"
                android:textColor="#fff"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>